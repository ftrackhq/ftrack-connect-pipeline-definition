{
    "asset": "modelPackage",
    "host":"maya",
    "ui":"qt",
    "context":[
        {
            "plugin":"context_selector", 
            "widget":"thumbnails"
        }
    ],
    "components":{
        "main":{
            "collect":[
                {
                    "plugin":"scene"
                }
            ],
            "validate":[
                {
                    "plugin":"non_empty"
                }
            ],
            "output":[
                {
                    "plugin":"geometry", 
                    "editable":false,
                    "options":{
                        "file_type":"alebmic",
                        "animated":false

                    }
                }
            ]    
        },
        "cache":{
            "collect":[
                {
                    "plugin":"from_set",
                    "editable":false,
                    "options":{
                        "file_type":"mayaascii"
                    }
                }
            ],
            "validate":[
                {
                    "plugin":"non_empty"
                },
                {
                    "plugin":"non_mainfold",
                    "editable":false
                }
            ],
            "output":[]    
        },
        "reviewable":{
            "collect":[
                {
                    "plugin":"scene"
                }
            ],
            "validate":[
                {
                    "plugin":"non_empty"
                }
            ],
            "output":[
                {
                    "plugin":"playblast",
                    "options":{
                        "start_frame":0,
                        "end_frame":100
                    }
                }
            ]               
        }
    },
    "publish":[
        {
            "plugin":"to_ftrack", 
            "visible":false
        },
        {
            "plugin":"metadata", 
            "visible":true
        }
    ],
    "post_publish":[

    ]
}