{
    "asset": "rigPackage",
    "host":"maya",
    "ui":"qt",
    "context":[
        {
            "plugin":"context_selector",
            "widget":"thumbnails"
        }
    ],
    "components":{
        "character":{
            "collect":[
                {
                    "plugin":"from_set",
                    "options": {
                      "set_name": "export"
                    }
                }
            ],
            "validate":[
                {
                    "plugin":"non_empty"
                }
            ],
            "output":[
                {
                    "plugin":"rig",
                    "editable":false,
                    "options":{
                        "file_type":"ma"
                    }
                }
            ]
        },
        "reviewable":{
            "collect":[
                {
                    "plugin":"scene"
                }
            ],
            "validate":[
                {
                    "plugin":"non_empty"
                }
            ],
            "output":[
                {
                    "plugin":"playblast",
                    "options":{
                        "from_camera": "persp",
                        "start_frame":0,
                        "end_frame":100,
                        "encoding":"h264",
                        "file_type": "mov"
                    }
                }
            ]
        },
        "thumbnail": {
            "collect":[
                {
                    "plugin":"from_viewport",
                }
            ],
            "validate":[
                {
                    "plugin":"non_empty"
                }
            ],
            "output":[
                {
                    "plugin":"image",
                    "options":{
                        "file_type":"jpg",
                    }
                }
            ]
        }
    },
    "publish":[
        {
            "plugin":"to_ftrack",
            "visible":false
        },
        {
            "plugin":"metadata",
            "visible":true
        }
    ]
}