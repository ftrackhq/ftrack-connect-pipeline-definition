{
    "asset": "animPackage",
    "host":"maya",
    "ui":"qt",
    "context":[
        {
            "plugin":"context_selector", 
            "widget":"thumbnails"
        }
    ],
    "components":{
        "main":{
            "collect":[
                {
                    "plugin":"scene"
                }
            ],
            "validate":[
                {
                    "plugin":"non_empty"
                }
            ],
            "output":[
                {
                    "plugin":"geometry", 
                    "editable":false,
                    "options":{
                        "file_type":"ma",
                        "animated":true,
                        "start_frame":0,
                        "end_frame":100
                    }
                }
            ]    
        },
        "cache":{
            "collect":[
                {
                    "plugin":"from_set",
                    "editable":false,
                    "options":{
                        "file_type":"mayaascii"
                    }
                }
            ],
            "validate":[
                {
                    "plugin":"non_empty"
                },
                {
                    "plugin":"non_mainfold",
                    "editable":false
                }
            ],
            "output":[
                {
                    "plugin":"geometry",
                    "editable":false,
                    "options":{
                        "file_type":"alembic",
                        "animated":true,
                        "start_frame":0,
                        "end_frame":100
                    }
                }
            ]
        },
        "reviewable":{
            "collect":[
                {
                    "plugin":"scene"
                }
            ],
            "validate":[
                {
                    "plugin":"non_empty"
                }
            ],
            "output":[
                {
                    "plugin":"playblast",
                    "options":{
                        "from_camera": "persp",
                        "start_frame":0,
                        "end_frame":100,
                        "encoding":"h264",
                        "file_type": "mov"
                    }
                }
            ]               
        },
        "thumbnail": {
            "collect":[
                {
                    "plugin":"from_viewport"
                }
            ],
            "validate":[
                {
                    "plugin":"non_empty"
                }
            ],
            "output":[
                {
                    "plugin":"image",
                    "options":{
                        "file_type":"jpg"
                    }
                }
            ]
        }
    },
    "publish":[
        {
            "plugin":"to_ftrack", 
            "visible":false
        },
        {
            "plugin":"metadata", 
            "visible":true
        }
    ]
}