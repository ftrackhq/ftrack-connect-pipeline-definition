{
    "asset": "lightingPackage",
    "host":"maya",
    "ui":"qt",
    "context":[
        {
            "plugin":"context_selector",
            "widget":"thumbnails"
        }
    ],
    "components":{
        "main":{
            "collect":[
                {
                    "plugin":"from_set",
                    "options": {
                      "set_name": "geometry"
                    }
                }
            ],
            "validate":[
                {
                    "plugin":"non_empty"
                }
            ],
            "output":[
                {
                    "plugin":"geometry",
                    "editable":false,
                    "options":{
                        "file_type":"ma",
                        "animated":false

                    }
                }
            ]
        }
    },
    "publish":[
        {
            "plugin":"to_ftrack",
            "visible":false
        },
        {
            "plugin":"metadata",
            "visible":true
        }
    ]
}