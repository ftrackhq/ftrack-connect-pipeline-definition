{
    "type": "publisher",
    "name": "Texture Publisher",
    "package": "textPackage",
    "host":"photoshop",
    "ui":"js",
    "context":[
        {
            "name": "context selector",
            "plugin": "context.publish",
            "widget": "context.publish"
        }
    ],
    "components":[
        {
            "name": "color",
            "stages": [
                {"collectors":[
                    {
                        "name": "collect from layer",
                        "plugin":"from_layer",
                        "options": {
                            "prefix": "col_"
                        }
                    }
                ]},
                {"validators":[
                    {
                        "name": "validate selection",
                        "plugin":"non_empty"
                    }
                ]},
                {"outputs":[
                    {
                        "name": "texture layer",
                        "plugin":"image",
                        "options":{
                            "file_type":"exr",
                            "color_depth": 16
                        }
                    }
                ]}
                ]
        },
