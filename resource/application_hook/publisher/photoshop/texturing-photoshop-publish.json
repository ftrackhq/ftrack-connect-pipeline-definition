{
  "type": "publisher",
  "name": "Texture Publisher",
  "package": "textPackage",
  "host": "photoshop",
  "ui": "js",
  "contexts": [
    {
      "name": "context selector",
      "plugin": "context.publish",
      "widget": "context.publish"
    }
  ],
  "components": [
    {
      "name": "color",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect from layer",
              "plugin": "from_layer",
              "options": {
                "prefix": "col_"
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "non_empty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "texture layer",
              "plugin": "image",
              "options": {
                "file_type": "exr",
                "color_depth": 16
              }
            }
          ]
        }
      ]
    },
    {
      "name": "diffuse",
