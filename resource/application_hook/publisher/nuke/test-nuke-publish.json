{
  "type": "publisher",
  "name": "ImageSequence Publisher",
  "package": "imgPkg",
  "host": "nuke",
  "ui": "qt",
  "contexts": [
    {
      "name": "context selector",
      "plugin": "context.publish",
      "widget": "context.publish"
    }
  ],
  "components": [
    {
      "name": "nukescript",
      "stages": [
        {
          "name": "collector",
          "plugins": [
            {
              "name": "collect scene",
              "plugin": "nukescene"
            }
          ]
        },
        {
          "name": "validator",
          "plugins": [
            {
              "name": "validate selection",
              "plugin": "nonempty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write nuke script",
              "plugin": "nukescript"
            }
          ]
        }
      ]
    },
    {
      "name": "sequence",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect write node.",
              "plugin": "write_node",
              "widget": "write_node"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            },
            {
              "name": "validate node type",
              "plugin": "node_type",
              "options": {
                "node_type": "Write"
              }
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write sequence",
              "plugin": "sequence"
            }
          ]
        }
      ]
    },
    {
      "name": "thumbnail",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect write node.",
              "plugin": "write_node",
              "widget": "write_node"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            },
            {
              "name": "validate node type",
              "plugin": "node_type",
              "options": {
                "node_type": "Write"
              }
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write thumbnail",
              "plugin": "thumbnail"
            }
          ]
        }
      ]
    },
    {
      "name": "reviewable",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect write node.",
              "plugin": "write_node",
              "widget": "write_node"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            },
            {
              "name": "validate node type",
              "plugin": "node_type",
              "options": {
                "node_type": "Write"
              }
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write reviewable",
              "plugin": "reviewable"
            }
          ]
        }
      ]
    }
  ],
  "finalisers": [
    {
      "name": "to ftrack server",
      "plugin": "result",
      "visible": false
    }
  ]
}