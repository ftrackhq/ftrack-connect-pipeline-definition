{
    "name": "ImageSequence Publisher",
    "package": "imgPkg",
    "host":"nuke",
    "ui":"qt",
    "context":[
        {
            "name": "context selector",
            "plugin": "context.publish",
            "widget": "context.publish"
        }
    ],
    "components":[
        {
            "name": "nukescript",
            "stages": [
                {"collectors":[
                {
                    "name": "collect scene",
                    "plugin": "nukescene",
                }
                ],
                "validators":[
                    {
                        "name": "validate selection",
                        "plugin":"nonempty"
                    }
                ],
                "outputs":[
                    {
                        "name": "write nuke script",
                        "plugin": "nukescript"
                    }
                ]}
            ]
        },
        {
            "name": "sequence",
            "stages": [
                {"collectors": [
                {
                    "name": "collect write node.",
                    "plugin": "write_node",
                    "widget": "write_node"
                }
            ]},
                {"validators": [
                {
                    "name": "validate selection",
                    "plugin": "nonempty"
                },
                {
                    "name": "validate node type",
                    "plugin": "node_type",
                    "options": {"node_type": "Write"}
                }
            ]},
                {"outputs": [
                {
                    "name": "write sequence",
                    "plugin": "sequence"
                }
            ]}
            ]
        },
        {
            "name": "thumbnail",
            "stages": [
                {"collectors": [
                {
                    "name": "collect write node.",
                    "plugin": "write_node",
                    "widget": "write_node"
                }
            ]},
                {"validators": [
                {
                    "name": "validate selection",
                    "plugin": "nonempty"
                },
                {
                    "name": "validate node type",
                    "plugin": "node_type",
                    "options": {"node_type": "Write"}
                }
            ]},
                {"outputs": [
                {
                    "name": "write thumbnail",
                    "plugin": "thumbnail"
                }
            ]}
            ]
        },
        {
            "name": "reviewable",
            "stages": [
                {"collectors": [
                {
                    "name": "collect write node.",
                    "plugin": "write_node",
                    "widget": "write_node"
                }
            ]},
                {"validators": [
                {
                    "name": "validate selection",
                    "plugin": "nonempty"
                },
                {
                    "name": "validate node type",
                    "plugin": "node_type",
                    "options": {"node_type": "Write"}
                }
            ]},
                {"outputs": [
                {
                    "name": "write reviewable",
                    "plugin": "reviewable"
                }
            ]}
            ]
        }
    ],
    "publishers":[
        {
            "name": "to ftrack server",
            "plugin":"result",
            "visible":false
        }
    ]
}