{
  "type": "publisher",
  "name": "File Publisher",
  "package": "geoPkg",
  "host": "python",
  "contexts": [
    {
      "name": "context selector",
      "plugin": "context.publish",
      "widget": "context.publish",
      "options":{
        "context_id": "",
        "asset_name": "",
        "comment": "",
        "status_id": ""
      },
      "plugin_type": "context"
    }
  ],
  "components": [
    {
      "name": "main",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect from given path",
              "plugin": "filesystem",
              "options": {
                "path": null
              },
              "plugin_type": "collector"
            }
          ]
        },
        {
          "name":"validator",
          "plugins": [
            {
              "name": "file exists",
              "plugin": "file_exists",
              "plugin_type": "validator"
            }
          ]
        },
        {
          "name":"output",
          "plugins": [
            {
              "name": "passthrough output",
              "plugin": "passthrough",
              "plugin_type": "output"
            }
          ]
        }
      ]
    }
  ],
  "finalisers": [
    {
      "name": "to ftrack server",
      "plugin": "result",
      "visible": false,
      "plugin_type": "finaliser"
    }
  ]
}