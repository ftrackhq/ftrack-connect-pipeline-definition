{
  "type": "publisher",
  "name": "Maya File Publisher",
  "package": "geoPkg",
  "host": "maya",
  "ui": "qt",
  "contexts": [
    {
      "name": "context selector",
      "plugin": "context.publish",
      "widget": "context.publish",
      "options":{
        "context_id": "",
        "asset_name": "",
        "comment": "",
        "status_id": ""
      }
    }
  ],
  "components": [
    {
      "name": "main",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect from given path",
              "plugin": "filesystem",
              "options": {
                "path": null
              }
            }
          ]
        },
        {
          "name":"validator",
          "plugins": [
            {
              "name": "file exists",
              "plugin": "file_exists"
            }
          ]
        },
        {
          "name":"output",
          "plugins": [
            {
              "name": "passthrough output",
              "plugin": "passthrough"
            }
          ]
        }
      ]
    }
  ],
  "finalisers": [
    {
      "name": "to ftrack server",
      "plugin": "test_result",
      "visible": false
    }
  ]
}