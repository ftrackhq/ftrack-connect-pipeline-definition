{
    "type": "publisher",
    "name": "Rig Publisher",
    "package": "rigPackage",
    "host":"maya",
    "ui":"qt",
    "context":[
        {
            "name": "context selector",
            "plugin": "context.publish",
            "widget": "context.publish"
        }
    ],
    "components":[
        {
            "name": "character",
            "stages": [
                {"collectors":[
                {
                    "name": "collect from set",
                    "plugin":"from_set",
                    "options": {
                      "set_name": "export"
                    }
                }
            ]},
                {"validators":[
                {
                    "name": "validate selection",
                    "plugin":"non_empty"
                }
            ]},
                {"outputs":[
                {
                    "name": "rig",
                    "plugin":"rig",
                    "editable":false,
                    "options":{
                        "file_type":"ma"
                    }
                }
            ]}
            ]
        },
        {
            "name": "reviewable",
            "stages": [
                {"collectors":[
                {
                    "name": "from cache",
                    "plugin":"scene"
                }
            ]},
                {"validators":[
                {
                    "name": "validate selection",
                    "plugin":"non_empty"
                }
            ]},
                {"outputs":[
                {
                    "name": "playblast",
                    "plugin":"playblast",
                    "options":{
                        "from_camera": "persp",
                        "start_frame":0,
                        "end_frame":100,
                        "encoding":"h264",
                        "file_type": "mov"
                    }
                }
            ]}
            ]
        },
        {
            "name": "thumbnail",
            "stages": [
                {"collectors":[
                {
                    "name": "collect from viewport",
                    "plugin":"from_viewport"
                }
            ]},
                {"validators":[
                {
                    "name": "validate selection",
                    "plugin":"non_empty"
                }
            ]},
                {"outputs":[
                {
                    "name": "thumbnail",
                    "plugin":"image",
                    "options":{
                        "file_type":"jpg"
                    }
                }
            ]}
        ]
        }
    ],
    "publishers":[
        {
            "name": "to ftrack server",
            "plugin":"to_ftrack",
            "visible":false
        }
    ]
}