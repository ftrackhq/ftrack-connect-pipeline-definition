{
  "type": "publisher",
  "name": "Geometry Publisher",
  "package": "geoPkg",
  "host": "maya",
  "ui": "qt",
  "contexts": {
      "name": "context",
      "plugins":[
        {
          "name": "context selector",
          "plugin": "context.publish",
          "widget": "context.publish"
        }
      ]
    },
  "components": [
    {
      "name": "main",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Pick objects with prefix",
              "plugin": "from_prefix",
              "options": {
                "prefix": "geo_",
                "sufix": ""
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "maya",
              "plugin": "maya_binary",
              "widget": "maya_options"
            }
          ]
        }
      ]
    },
     {
      "name": "cache",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Pick objects with prefix",
              "plugin": "from_set",
              "options": {
                "set_name": "anim"
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "alembic",
              "plugin": "alembic",
              "widget": "alembic_options"
            }
          ]
        }
      ]
    },
    {
      "name": "game",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Pick objects with regex",
              "plugin": "from_regex",
              "options": {
                "expression": "^\\w+\\d"
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "fbx",
              "plugin": "fbx",
              "widget": "fbx_options"
            }
          ]
        }
      ]
    },
    {
      "name": "thumbnail",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "select camera to playblast",
              "plugin": "camera",
              "options": {
                "camera_name": "persp"
              },
              "widget": "camera"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "type": "plugin",
              "name": "validate selection",
              "plugin": "nonempty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "type": "plugin",
              "name": "write thumbnail",
              "plugin": "thumbnail"
            }
          ]
        }
      ]
    },
    {
      "name": "reviewable",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "select camera to playblast",
              "plugin": "camera",
              "options": {
                "camera_name": "persp"
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write reviewable",
              "plugin": "reviewable"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": {
      "name": "finalizer",
      "plugins":[
        {
          "name": "to ftrack server",
          "plugin": "result_maya",
          "visible": false
        }
      ]
    }
}