{
  "type": "publisher",
  "name": "Geometry Publisher",
  "package": "geoPkg",
  "host": "maya",
  "ui": "qt",
  "contexts": [
    {
      "name": "context selector",
      "plugin": "context.publish",
      "widget": "context.publish",
      "plugin_type": "context"
    }
  ],
  "components": [
    {
      "name": "main",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Pick selected object/s",
              "plugin": "selection",
              "plugin_type": "collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty",
              "plugin_type": "validator"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "maya",
              "plugin": "mayabinary",
              "options": {
                "preserve_reference": false,
                "history": false,
                "channels": true,
                "expressions": false,
                "constraints": false,
                "shaders": true,
                "include_scene_to_assets": false
              },
              "plugin_type": "output"
            }
          ]
        }
      ]
    },
    {
      "name": "thumbnail",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "select camera to playblast",
              "plugin": "camera",
              "options": {
                "camera_name": "persp"
              },
              "plugin_type": "collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "type": "plugin",
              "name": "validate selection",
              "plugin": "nonempty",
              "plugin_type": "validator"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "type": "plugin",
              "name": "write thumbnail",
              "plugin": "thumbnail",
              "plugin_type": "output"
            }
          ]
        }
      ]
    },
    {
      "name": "reviewable",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "select camera to playblast",
              "plugin": "camera",
              "options": {
                "camera_name": "persp"
              },
              "plugin_type": "collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty",
              "plugin_type": "validator"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write reviewable",
              "plugin": "reviewable",
              "plugin_type": "output"
            }
          ]
        }
      ]
    }
  ],
  "finalisers": [
    {
      "name": "to ftrack server",
      "plugin": "result",
      "visible": false,
      "plugin_type": "finaliser"
    }
  ]
}