{
  "type": "loader",
  "name": "Geo Loader",
  "package": "geoPkg_loader",
  "host": "python",
  "ui": "qt",
  "contexts": {
      "name": "context",
      "plugins":[
        {
          "name": "context selector",
          "plugin": "context.load",
          "widget": "context.load"
        }
      ]
    },
  "components": [
    {
      "name": "geometry",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Pick objects with prefix",
              "plugin": "collectorTest"
            },
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "component_list": ["main"],
                "accepted_formats": [".mb"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "importerTest"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "maya",
              "plugin": "postImportTest"
            }
          ]
        }
      ]
    }
  ],
  "finalisers": {
      "name": "finaliser",
      "plugins":[
        {
          "name": "to ftrack server",
          "plugin": "finaliserTest",
          "visible": false
        }
      ]
    }
}