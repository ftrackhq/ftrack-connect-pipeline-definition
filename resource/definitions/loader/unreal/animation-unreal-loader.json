{
  "type": "loader",
  "name": "Animation Loader",
  "package": "animation_unreal",
  "host_type": "unreal",
  "ui_type": "qt",
  "contexts": {
    "name": "context",
    "plugins":[
      {
        "name": "context selector",
        "plugin": "context.load",
        "widget": "context.load"
      }
    ]
  },
  "components": [
      {
      "name": "alembic",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".abc"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import Alembic animation to Unreal",
              "widget" : "load_animation_unreal",
              "plugin": "abc_animation_unreal_import"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "unreal",
              "plugin": "postImportTest"
            }
          ]
        }
      ]
    },
    {
      "name": "fbx",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".fbx"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import FBX animation to Unreal",
              "widget" : "load_animation_unreal",
              "plugin": "fbx_animation_unreal_import"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "unreal",
              "plugin": "postImportTest"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": {
      "name": "finalizer",
      "plugins":[
        {
          "name": "Do nothing",
          "plugin": "finalizerTest",
          "visible": false
        }
      ]
    }
}