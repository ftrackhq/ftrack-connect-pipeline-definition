{
  "type": "loader",
  "name": "Geometry Loader",
  "package": "geometry_unreal",
  "host_type": "unreal",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "common_default_loader_context",
              "widget": "common_default_loader_context"
            }
          ]
        }
      ]
    }
  ],
  "components": [
     {
      "name": "alembic",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "common_context_loader_collector",
              "options": {
                "accepted_formats": [".abc"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import Alembic geometry to unreal",
              "widget" : "load_geometry_unreal",
              "plugin": "abc_geometry_unreal_import"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "unreal",
              "plugin": "common_default_loader_post_import"
            }
          ]
        }
      ]
    },
    {
      "name": "fbx",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "common_context_loader_collector",
              "options": {
                "accepted_formats": [".fbx"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import FBX geometry to unreal",
              "widget" : "load_geometry_unreal",
              "plugin": "fbx_geometry_unreal_import"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "unreal",
              "plugin": "common_default_loader_post_import"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "common_default_loader_pre_finalizer",
              "visible": false
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "Do nothing",
              "plugin": "common_default_loader_finalizer",
              "visible": false
            }
          ]
        },
        {
          "name": "post_finalizer",
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "common_default_loader_post_finalizer",
              "visible": false
            }
          ]
        }
      ]
    }
  ]
}