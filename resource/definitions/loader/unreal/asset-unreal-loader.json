{
  "type": "loader",
  "name": "Asset Loader",
  "asset_type": "script",
  "host_type": "unreal",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "common_passthrough_loader_context",
              "widget": "common_passthrough_loader_context"
            },
            {
              "name": "root context selector",
              "plugin": "common_passthrough_loader_context",
              "widget": "unreal_root_loader_context"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "asset",
      "file_formats": [".uasset"],
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "common_context_loader_collector"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import paths to Unreal",
              "plugin": "unreal_native_loader_importer"
            }
          ]
        },
        {
          "name": "post_importer",
          "plugins":[
            {
              "name": "unreal",
              "plugin": "common_passthrough_loader_post_importer"
            }
          ]
        }
      ]
    }
  ],
"finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "visible": true,
          "plugins":[
            {
              "name": "Import asset dependencies from ftrack server",
              "plugin": "unreal_dependencies_loader_pre_finalizer",
              "optional": true
            }
          ]
        },
        {
          "name": "finalizer",
          "visible": true,
          "plugins":[
            {
              "name": "Finalize asset",
              "description" : "Restore pipeline asset info, restore modification time and load asset in Unreal",
              "plugin": "unreal_asset_loader_finalizer"
            }
          ]
        },
        {
          "name": "post_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "Post finalizer",
              "plugin": "common_passthrough_loader_post_finalizer"
            }
          ]
        }
      ]
    }
  ]
}