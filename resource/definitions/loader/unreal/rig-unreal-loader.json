{
  "type": "loader",
  "name": "Rig Loader",
  "package": "rig_unreal",
  "host_type": "unreal",
  "ui_type": "qt",
  "contexts": {
      "name": "context",
      "plugins":[
        {
          "name": "context selector",
          "plugin": "context.load",
          "widget": "context.load"
        }
      ]
    },
  "components": [
     {
      "name": "alembic",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".abc"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import Alembic rig to unreal",
              "widget": "load_rig_unreal",
              "plugin": "abc_rig_unreal_import"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "unreal",
              "plugin": "postImportTest"
            }
          ]
        }
      ]
    },
    {
      "name": "fbx",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".fbx"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import FBX rig to unreal",
              "widget": "load_rig_unreal",
              "plugin": "fbx_rig_unreal_import"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "unreal",
              "plugin": "postImportTest"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": {
      "name": "finalizer",
      "plugins":[
        {
          "name": "Do nothing",
          "plugin": "finalizerTest",
          "visible": false
        }
      ]
    }
}