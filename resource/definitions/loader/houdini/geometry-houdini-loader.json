{
  "type": "loader",
  "name": "Geometry Loader",
  "package": "geometry_houdini",
  "host_type": "houdini",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "context.load",
              "widget": "context.load"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "houdiniNodes",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".hip"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import paths to Houdini",
              "plugin": "load_houdini_nodes",
              "widget": "load_houdini",
              "options": {
                "load_mode": "Import",
                "load_options": {
                  "MergeOverwriteOnConflict": true
                }
              }
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "houdini",
              "plugin": "post_import_test"
            }
          ]
        }
      ]
    },
     {
      "name": "alembic",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".abc"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import Alembic paths to Houdini",
              "plugin": "abc_houdini_import"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "houdini",
              "plugin": "post_import_test"
            }
          ]
        }
      ]
    },
    {
      "name": "fbx",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".fbx"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import FBX paths to Houdini",
              "plugin": "fbx_houdini_import"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "houdini",
              "plugin": "post_import_test"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "pre_finalizer_test",
              "visible": false
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "Do nothing",
              "plugin": "finalizer_test",
              "visible": false
            }
          ]
        },
        {
          "name": "post_finalizer",
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "post_finalizer_test",
              "visible": false
            }
          ]
        }
      ]
    }
  ]
}