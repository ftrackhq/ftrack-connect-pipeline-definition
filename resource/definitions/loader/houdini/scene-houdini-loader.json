{
  "type": "loader",
  "name": "Scene Loader",
  "package": "scene_houdini",
  "host_type": "houdini",
  "ui_type": "qt",
  "contexts": {
      "name": "context",
      "plugins":[
        {
          "name": "context selector",
          "plugin": "context.load",
          "widget": "context.load"
        }
      ]
    },
  "components": [
    {
      "name": "houdiniScene",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".hip"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import paths to Houdini",
              "plugin": "load_houdini",
              "options": {
                "load_mode": "Import",
                "load_options": {
                  "MergeOverwriteOnConflict": true
                }
              }
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "houdini",
              "plugin": "postImportTest"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": {
      "name": "finalizer",
      "plugins":[
        {
          "name": "Do nothing",
          "plugin": "finalizerTest",
          "visible": false
        }
      ]
    }
}