{
  "type": "loader",
  "name": "Rig Loader",
  "package": "rig_3dsmax",
  "host_type": "3dsmax",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "mode": "import",
              "name": "context selector",
              "plugin": "context.load",
              "widget": "context.load"
            },
            {
              "mode": "open",
              "name": "context selector",
              "plugin": "context.load",
              "widget": "context.open"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "3dsmax",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".max"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "load paths to Max",
              "plugin": "load_max"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "max",
              "plugin": "post_import_test"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "pre_finalizer_test",
              "visible": false
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "Do nothing",
              "plugin": "finalizer_test",
              "visible": false
            }
          ]
        },
        {
          "name": "post_finalizer",
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "post_finalizer_test",
              "visible": false
            }
          ]
        }
      ]
    }
  ]
}