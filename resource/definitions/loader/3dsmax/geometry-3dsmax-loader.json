{
  "type": "loader",
  "name": "Geometry Loader",
  "package": "geometry_3dsmax",
  "host": "3dsmax",
  "ui": "qt",
  "contexts": {
      "name": "context",
      "plugins":[
        {
          "name": "context selector",
          "plugin": "context.load",
          "widget": "context.load"
        }
      ]
    },
  "components": [
    {
      "name": "3dsmax",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".max"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "load paths to Max",
              "plugin": "load_max"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "max",
              "plugin": "postImportTest"
            }
          ]
        }
      ]
    },
     {
      "name": "alembic",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".abc"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import abc to Max",
              "plugin": "import_max_abc"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "max",
              "plugin": "postImportTest"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": {
      "name": "finalizer",
      "plugins":[
        {
          "name": "Do nothing",
          "plugin": "finalizerTest",
          "visible": false
        }
      ]
    }
}