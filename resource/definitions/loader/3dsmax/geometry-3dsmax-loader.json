{
  "type": "loader",
  "name": "Geometry Loader",
  "package": "geometry_3dsmax",
  "host_type": "3dsmax",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "mode": "import",
              "name": "context selector",
              "plugin": "common_default_loader_context",
              "widget": "common_default_loader_context"
            },
            {
              "mode": "open",
              "name": "context selector",
              "plugin": "common_default_loader_context",
              "widget": "context.open"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "3dsmax",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "common_context_loader_collector",
              "options": {
                "accepted_formats": [".max"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "load paths to Max",
              "plugin": "load_max"
            }
          ]
        },
        {
          "name": "post_importer",
          "plugins":[
            {
              "name": "max",
              "plugin": "common_default_loader_post_importer"
            }
          ]
        }
      ]
    },
     {
      "name": "alembic",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "common_context_loader_collector",
              "options": {
                "accepted_formats": [".abc"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import abc to Max",
              "plugin": "import_max_abc"
            }
          ]
        },
        {
          "name": "post_importer",
          "plugins":[
            {
              "name": "max",
              "plugin": "common_default_loader_post_importer"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "common_default_loader_pre_finalizer",
              "visible": false
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "Do nothing",
              "plugin": "common_default_loader_finalizer",
              "visible": false
            }
          ]
        },
        {
          "name": "post_finalizer",
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "common_default_loader_post_finalizer",
              "visible": false
            }
          ]
        }
      ]
    }
  ]
}