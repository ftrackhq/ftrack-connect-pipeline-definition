{
  "type": "loader",
  "name": "Light Rig Loader",
  "package": "light_rig_maya",
  "host_type": "maya",
  "ui_type": "qt",
  "contexts": {
      "name": "context",
      "plugins":[
        {
          "name": "context selector",
          "plugin": "context.load",
          "widget": "context.load"
        }
      ]
    },
  "components": [
    {
      "name": "mayaBinary",
      "optional":  true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".mb"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import paths to Maya",
              "plugin": "load_maya",
              "options": {
                "load_mode": "Import",
                "load_options": {
                  "preserve_references": true,
                  "add_namespace": true,
                  "namespace_option": "file_name"
                }
              }
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "maya",
              "plugin": "postImportTest"
            }
          ]
        }
      ]
    },
       {
      "name": "mayaAscii",
      "optional":  true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".ma"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import paths to Maya",
              "plugin": "load_maya",
              "options": {
                "load_mode": "Import",
                "load_options": {
                  "preserve_references": true,
                  "add_namespace": true,
                  "namespace_option": "file_name"
                }
              }
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "maya",
              "plugin": "postImportTest"
            }
          ]
        }
      ]
    }

  ],
  "finalizers": {
      "name": "finalizer",
      "plugins":[
        {
          "name": "Do nothing",
          "plugin": "finalizerTest",
          "visible": false
        }
      ]
    }
}