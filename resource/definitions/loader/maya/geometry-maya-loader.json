{
  "type": "loader",
  "name": "Geometry Loader",
  "package": "geometry_maya",
  "host_type": "maya",
  "ui_type": "qt",
  "contexts": {
      "name": "context",
      "plugins":[
        {
          "name": "context selector",
          "plugin": "context.load",
          "widget": "context.load"
        }
      ]
    },
  "components": [
    {
      "name": "mayaBinary",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".mb"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import paths to Maya",
              "plugin": "load_maya",
              "options": {
                "load_mode": "Import",
                "load_options": {
                  "preserve_references": true,
                  "add_namespace": true,
                  "namespace_option": "file_name"
                }
              }
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "maya",
              "plugin": "postImportTest"
            }
          ]
        }
      ]
    },
     {
      "name": "alembic",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".abc"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import paths to Maya",
              "plugin": "abc_maya_import"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "maya",
              "plugin": "postImportTest"
            }
          ]
        }
      ]
    },
    {
      "name": "fbx",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context",
              "options": {
                "accepted_formats": [".fbx"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import paths to Maya",
              "plugin": "load_maya",
              "options": {
                "load_mode": "Import",
                "load_options": {
                  "preserve_references": true,
                  "add_namespace": true,
                  "namespace_option": "file_name"
                }
              }
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "maya",
              "plugin": "postImportTest"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": {
      "name": "finalizer",
      "plugins":[
        {
          "name": "Merge scene",
          "plugin": "merge_geo_abc",
          "visible": false
        }
      ]
    }
}