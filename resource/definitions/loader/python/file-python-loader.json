{
  "type": "loader",
  "name": "File Loader",
  "asset_type": "scene",
  "host_type": "python",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "common_passthrough_loader_context",
              "widget": "common_passthrough_loader_context"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "main",
      "file_formats": [".zip"],
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Pick objects with suffix",
              "plugin": "collector_test"
            },
            {
              "name": "Collect components from context",
              "plugin": "common_context_loader_collector"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "importer",
              "plugin": "common_passthrough_loader_importer",
              "widget": "common_passthrough_loader_importer",
              "options": {
                "load_mode": "import"
              }
            }
          ]
        },
        {
          "name": "post_importer",
          "plugins":[
            {
              "name": "post import plugin",
              "plugin": "common_passthrough_loader_post_importer"
            }
          ]
        }
      ]
    },
    {
      "name": "animation",
      "file_formats": [".ma",".mb"],
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Pick objects with suffix",
              "plugin": "common_test_opener_collector"
            },
            {
              "name": "Collect components from context",
              "plugin": "common_context_loader_collector"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "importer",
              "plugin": "common_passthrough_loader_importer",
              "widget": "common_passthrough_loader_importer",
              "options": {
                "load_mode": "import"
              }
            }
          ]
        },
        {
          "name": "post_importer",
          "visible": false,
          "plugins":[
            {
              "name": "post import plugin",
              "plugin": "common_passthrough_loader_post_importer"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "visible": false,
      "stages": [
        {
          "name": "pre_finalizer",
          "plugins":[
            {
              "name": "pre from ftrack server",
              "plugin": "common_passthrough_loader_pre_finalizer"
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "from ftrack server",
              "plugin": "common_passthrough_loader_finalizer"
            }
          ]
        },
        {
          "name": "post_finalizer",
          "plugins":[
            {
              "name": "post from ftrack server",
              "plugin": "common_passthrough_loader_post_finalizer"
            }
          ],
          "visible": false
        }
      ]
    }
  ]
}