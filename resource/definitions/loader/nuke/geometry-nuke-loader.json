{
  "type": "loader",
  "name": "Geometry Loader",
  "asset_type": "geo",
  "host_type": "nuke",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "common_default_loader_context",
              "widget": "common_default_loader_context"
            }
          ]
        }
      ]
    }
  ],
  "components": [
     {
      "name": "cache",
      "file_formats": [".abc"],
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "common_context_loader_collector"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import paths to Nuke",
              "plugin": "nuke_geometry_loader_importer"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "nuke",
              "plugin": "common_default_loader_post_import"
            }
          ]
        }
      ]
    },
    {
      "name": "game",
      "file_formats": [".fbx"],
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "common_context_loader_collector"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import paths to Nuke",
              "plugin": "nuke_geometry_loader_importer"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "nuke",
              "plugin": "common_default_loader_post_import"
            }
          ]
        }
      ]
    },
    {
      "name": "geo",
      "file_formats": [".obj"],
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "common_context_loader_collector"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import paths to Nuke",
              "plugin": "nuke_geometry_loader_importer"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "nuke",
              "plugin": "common_default_loader_post_import"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "common_default_loader_pre_finalizer",
              "visible": false
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "Do nothing",
              "plugin": "common_default_loader_finalizer",
              "visible": false
            }
          ]
        },
        {
          "name": "post_finalizer",
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "common_default_loader_post_finalizer",
              "visible": false
            }
          ]
        }
      ]
    }
  ]
}