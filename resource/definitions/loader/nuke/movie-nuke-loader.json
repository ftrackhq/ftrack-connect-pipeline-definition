{
  "type": "loader",
  "name": "Movie Loader",
  "asset_type": "render",
  "host_type": "nuke",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "common_default_loader_context",
              "widget": "common_default_loader_context"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "snapshot",
      "file_formats": [".nk"],
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "common_context_loader_collector"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "load Scene",
              "plugin": "nuke_default_loader_importer"
            }
          ]
        },
        {
          "name": "post_importer",
          "plugins":[
            {
              "name": "nuke",
              "plugin": "common_default_loader_post_importer"
            }
          ]
        }
      ]
    },
    {
      "name": "movie",
      "file_formats": [".mov", ".r3d", ".mxf", ".avi"],
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "common_context_loader_collector"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import movie",
              "plugin": "nuke_movie_loader_importer"
            }
          ]
        },
        {
          "name": "post_importer",
          "plugins":[
            {
              "name": "nuke",
              "plugin": "common_default_loader_post_importer"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "common_default_loader_pre_finalizer"
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "Do nothing",
              "plugin": "common_default_loader_finalizer",
              "visible": false
            }
          ]
        },
        {
          "name": "post_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "common_default_loader_post_finalizer"
            }
          ]
        }
      ]
    }
  ]
}