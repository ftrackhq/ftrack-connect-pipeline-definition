{
  "type": "loader",
  "name": "Movie Loader",
  "asset_type": "render",
  "host_type": "nuke",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "mode": "import",
              "name": "context selector",
              "plugin": "context.load",
              "widget": "context.load"
            },
            {
              "mode": "open",
              "name": "context selector",
              "plugin": "context.load",
              "widget": "context.open"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "snapshot",
      "file_formats": [".nk"],
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "load Scene",
              "plugin": "load_nuke"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "nuke",
              "plugin": "post_import_test"
            }
          ]
        }
      ]
    },
    {
      "name": "movie",
      "file_formats": [".mov", ".r3d", ".mxf", ".avi"],
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import movie",
              "plugin": "import_movie"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "nuke",
              "plugin": "post_import_test"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "pre_finalizer_test"
            }
          ]
        },
        {
          "name": "finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "Copy script to working directory",
              "plugin": "nuke_finalize",
              "mode": "open"
            },
            {
              "name": "Do nothing",
              "plugin": "finalizer_test",
              "mode": "import",
              "visible": false
            }
          ]
        },
        {
          "name": "post_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "post_finalizer_test"
            }
          ]
        }
      ]
    }
  ]
}