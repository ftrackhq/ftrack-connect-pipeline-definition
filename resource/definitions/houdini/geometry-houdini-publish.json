{
  "type": "publisher",
  "name": "Geometry Publisher",
  "package": "geometry_houdini",
  "host": "houdini",
  "ui": "qt",
  "contexts": {
      "name": "context",
      "plugins":[
        {
          "name": "context selector",
          "plugin": "context.publish",
          "widget": "context.publish"
        }
      ]
    },
  "components": [
    {
      "name": "houdiniPublishScene",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Geometry Collector",
              "plugin": "geometry_collector",
              "widget": "geometry_collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "is_geometry"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "houdini",
              "plugin": "houdini_scene",
              "widget": "houdini_options"
            }
          ]
        }
      ]
    },
    {
      "name": "thumbnail",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "take screenshot",
              "widget": "nonempty",
              "plugin": "nonempty"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write thumbnail",
              "plugin": "thumbnail"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": {
      "name": "finalizer",
      "plugins":[
        {
          "name": "to ftrack server",
          "plugin": "result_houdini",
          "visible": false
        }
      ]
    }
}