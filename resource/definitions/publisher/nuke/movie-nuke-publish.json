{
  "type": "publisher",
  "name": "Movie Publisher",
  "asset_type": "render",
  "host_type": "nuke",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "context.publish",
              "widget": "context.publish"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "snapshot",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect scene",
              "plugin": "nukescript"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "Check file saved",
              "plugin": "file_saved"
            },
            {
              "name": "validate file exists",
              "plugin": "file_exists"
            }
          ]
        },
        {
          "name": "exporter",
          "plugins":[
            {
              "name": "write nuke script",
              "plugin": "nukescript"
            }
          ]
        }
      ]
    },
    {
      "name": "movie",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect sequence node.",
              "plugin": "selection"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            },
            {
              "name": "Script saved",
              "plugin": "file_saved"
            },
            {
              "name": "Can connect to write node",
              "plugin": "can_connect_to_write_node"
            }
          ]
        },
        {
          "name": "exporter",
          "plugins":[
            {
              "name": "write movie",
              "plugin": "movie",
              "options": {
                "mode": "render",
                "file_format": "mov",
                "mov": {
                  "mov64_codec": "appr",
                  "mov_prores_codec_profile": "ProRes 4:4:4:4 12-bit"
                }
              }
            }
          ]
        }
      ]
    },
    {
      "name": "thumbnail",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect write node.",
              "plugin": "selection"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "can_connect_to_write_node"
            }
          ]
        },
        {
          "name": "exporter",
          "plugins":[
            {
              "name": "write thumbnail",
              "plugin": "thumbnail"
            }
          ]
        }
      ]
    },
    {
      "name": "reviewable",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect sequence node.",
              "plugin": "selection"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            },
            {
              "name": "Can connect to write node",
              "plugin": "can_connect_to_write_node"
            }
          ]
        },
        {
          "name": "exporter",
          "plugins":[
            {
              "name": "write reviewable",
              "plugin": "reviewable",
              "options": {
                  "mode": "render"
              }
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "pre_result"
            }
          ]
        },
        {
          "name": "finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "to ftrack server",
              "plugin": "result_nuke"
            }
          ]
        },
        {
          "name": "post_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "post_result"
            }
          ]
        }
      ]
    }
  ]
}