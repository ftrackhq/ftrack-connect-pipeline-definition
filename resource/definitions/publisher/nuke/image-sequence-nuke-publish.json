{
  "type": "publisher",
  "name": "Scene Publisher",
  "package": "image_sequence_nuke",
  "host": "nuke",
  "ui": "qt",
  "contexts": {
      "name": "context",
      "plugins":[
        {
          "name": "context selector",
          "plugin": "context.publish",
          "widget": "context.publish"
        }
      ]
    },
  "components": [
    {
      "name": "nukescript",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect scene",
              "plugin": "nukescene"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "type": "plugin",
              "name": "validate selection",
              "plugin": "nonempty"
            },
            {
              "name": "Check file saved",
              "plugin": "file_saved"
            },
            {
              "name": "validate selection",
              "plugin": "file_exists"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write nuke script",
              "plugin": "nukescript"
            }
          ]
        }
      ]
    },
    {
      "name": "sequence",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect sequence node.",
              "plugin": "write_node",
              "widget": "write_node"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write sequence",
              "plugin": "sequence",
              "options": {
                "file_format": "exr",
                "file_format_options": {
                  "datatype": 1,
                  "compression": 1
                }
              }
            }
          ]
        }
      ]
    },
    {
      "name": "thumbnail",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect write node.",
              "plugin": "write_node",
              "widget": "write_node"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "type": "plugin",
              "name": "validate selection",
              "plugin": "nonempty"
            },
            {
              "name": "validate node type",
              "plugin": "node_type",
              "options": {
                "node_type": "Write"
              }
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write thumbnail",
              "plugin": "thumbnail"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": {
      "name": "finalizer",
      "plugins":[
        {
          "name": "to ftrack server",
          "plugin": "result.nuke",
          "visible": false
        }
      ]
    }
}