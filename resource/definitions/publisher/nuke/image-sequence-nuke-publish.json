{
  "type": "publisher",
  "name": "Image Sequence Publisher",
  "asset_type": "img",
  "host_type": "nuke",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "context.publish",
              "widget": "context.publish"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "snapshot",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect scene",
              "plugin": "nukescript"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "Check file saved",
              "plugin": "file_saved"
            },
            {
              "name": "validate file exists",
              "plugin": "file_exists"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write nuke script",
              "plugin": "nukescript"
            }
          ]
        }
      ]
    },
    {
      "name": "sequence",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect sequence node.",
              "plugin": "selection"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "Validate selection",
              "plugin": "nonempty"
            },
            {
              "name": "Script saved",
              "plugin": "file_saved"
            },
            {
              "name": "Can connect to write node",
              "plugin": "can_connect_to_write_node"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "render or pickup sequence",
              "plugin": "sequence",
              "options": {
                "mode": "render",
                "file_format": "exr",
                "file_format_options": {
                  "exr": {
                    "datatype": 1,
                    "compression": 1
                  }
                }
              }
            }
          ]
        }
      ]
    },
    {
      "name": "thumbnail",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect write node.",
              "plugin": "selection"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "can_connect_to_write_node"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write thumbnail",
              "plugin": "thumbnail"
            }
          ]
        }
      ]
    },
    {
      "name": "reviewable",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect sequence node.",
              "plugin": "selection"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            },
            {
              "name": "Can connect to write node",
              "plugin": "can_connect_to_write_node"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write reviewable",
              "plugin": "reviewable",
              "options": {
                  "mode": "render"
              }
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "pre_result"
            }
          ]
        },
        {
          "name": "finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "to ftrack server",
              "plugin": "result_nuke"
            }
          ]
        },
        {
          "name": "post_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "post_result"
            }
          ]
        }
      ]
    }
  ]
}