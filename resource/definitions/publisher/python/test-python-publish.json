{
  "type": "publisher",
  "name": "File Publisher",
  "package": "pythonPkg",
  "host_type": "python",
  "contexts": {
      "name": "context",
      "plugins":[
        {
          "name": "context selector",
          "plugin": "context.publish",
          "widget": "context.publish"
        }
      ]
    },
  "components": [
    {
      "name": "main",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect from given path",
              "plugin": "filesystem",
              "widget": "file_collector.widget",
              "options": {
                "path": null
              }
            }
          ]
        },
        {
          "name":"validator",
          "plugins": [
            {
              "name": "file exists",
              "plugin": "file_exists"
            }
          ]
        },
        {
          "name":"output",
          "plugins": [
            {
              "name": "passthrough output",
              "plugin": "passthrough"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": {
      "name": "finalizer",
      "plugins":[
        {
          "name": "to ftrack server",
          "plugin": "result",
          "visible": false
        }
      ]
    }
}