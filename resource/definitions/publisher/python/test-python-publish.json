{
  "type": "publisher",
  "name": "File Publisher",
  "package": "pythonPkg",
  "host_type": "python",
  "contexts": [
    {
      "name": "contextStep",
      "stages": [
        {
          "name": "context",
          "plugins": [
            {
              "name": "context selector",
              "plugin": "context.publish",
              "widget": "context.publish"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "main",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect from given path",
              "plugin": "filesystem",
              "widget": "file_collector.widget",
              "options": {
                "path": null
              }
            }
          ]
        },
        {
          "name":"validator",
          "plugins": [
            {
              "name": "file exists",
              "plugin": "file_exists"
            }
          ]
        },
        {
          "name":"output",
          "plugins": [
            {
              "name": "passthrough output",
              "plugin": "passthrough"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "finalizerStep",
      "stages": [
        {
          "name": "preFinalizer",
          "plugins":[
            {
              "name": "to ftrack server",
              "plugin": "result_maya",
              "visible": false
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "to ftrack server",
              "plugin": "result",
              "visible": false
            }
          ]
        },
        {
          "name": "postFinalizer",
          "plugins":[
            {
              "name": "to ftrack server",
              "plugin": "result_maya",
              "visible": false
            }
          ]
        }
      ]
    }
  ]
}