{
  "type": "publisher",
  "name": "Geometry Publisher",
  "package": "geometry_3dsmax",
  "host": "3dsmax",
  "ui": "qt",
  "contexts": {
      "name": "context",
      "plugins":[
        {
          "name": "context selector",
          "plugin": "context.publish",
          "widget": "context.publish"
        }
      ]
    },
  "components": [
    {
      "name": "3dsmax",
      "stages": [
        {
          "name": "collector",
          "plugins":[
             {
              "name": "Geometry Collector",
              "plugin": "geometry_collector",
              "widget": "geometry_collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "is_geometry"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "3dsmaxbinary",
              "plugin": "OutputMaxBinaryPlugin"
            }
          ]
        }
      ]
    },
     {
      "name": "alembic",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Geometry Collector",
              "plugin": "geometry_collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "is_geometry"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "alembic",
              "plugin": "OutputMaxAlembicPlugin",
              "widget": "alembic_options",
              "options": {
                "alembicAnimation": true
              }
            }
          ]
        }
      ]
    },
    {
      "name": "thumbnail",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "select viewport to playblast",
              "plugin": "viewport",
              "widget": "viewport"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write thumbnail",
              "plugin": "thumbnail"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": {
      "name": "finalizer",
      "plugins":[
       {
          "name": "finalizer max",
          "plugin": "result.max",
          "visible": false
        }
      ]
    }
}