{
  "type": "publisher",
  "name": "Scene Publisher",
  "package": "scene_houdini",
  "host_type": "houdini",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "context.publish",
              "widget": "context.publish"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "houdiniScene",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect_scene_selection",
              "plugin": "scene_or_selection",
              "options": {
                "export": ["scene", "export_selected"]
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "houdini",
              "plugin": "houdini_scene_output"
            }
          ]
        }
      ]
    },
    {
      "name": "thumbnail",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "empty collector",
              "plugin": "publish_collector_test"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "publish_validator_test"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write thumbnail",
              "plugin": "thumbnail"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "pre_result",
              "visible": false
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "to ftrack server",
              "plugin": "result_houdini",
              "visible": false
            }
          ]
        },
        {
          "name": "post_finalizer",
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "post_result",
              "visible": false
            }
          ]
        }
      ]
    }
  ]
}