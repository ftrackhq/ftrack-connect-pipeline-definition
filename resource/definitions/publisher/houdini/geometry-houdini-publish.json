{
  "type": "publisher",
  "name": "Geometry Publisher",
  "package": "geometry_houdini",
  "host_type": "houdini",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "common_default_publisher_context",
              "widget": "common_default_publisher_context"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "houdiniScene",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect_scene_selection",
              "plugin": "scene_or_selection",
              "options": {
                "export": ["scene", "export_selected"]
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "common_nonEmpty_publisher_validator"
            }
          ]
        },
        {
          "name": "exporter",
          "plugins":[
            {
              "name": "houdini",
              "plugin": "houdini_scene_exporter"
            }
          ]
        }
      ]
    },
    {
      "name": "houdiniNodes",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Geometry Collector",
              "plugin": "geometry_collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "is_geometry"
            }
          ]
        },
        {
          "name": "exporter",
          "plugins":[
            {
              "name": "houdini",
              "plugin": "houdini_nodes_exporter"
            }
          ]
        }
      ]
    },
     {
      "name": "alembic",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Geometry Collector",
              "plugin": "geometry_collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "is_geometry"
            }
          ]
        },
        {
          "name": "exporter",
          "plugins":[
            {
              "name": "Alembic exporter options:",
              "plugin": "alembic_exporter",
              "options": {
                "ABCAnimation": true
              }
            }
          ]
        }
      ]
    },
    {
      "name": "fbx",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Geometry Collector",
              "plugin": "geometry_collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "is_geometry"
            }
          ]
        },
        {
          "name": "exporter",
          "plugins":[
            {
              "name": "FBX exporter options:",
              "plugin": "fbx_exporter"
            }
          ]
        }
      ]
    },
    {
      "name": "thumbnail",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "empty collector",
              "plugin": "publish_collector_test"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "publish_validator_test"
            }
          ]
        },
        {
          "name": "exporter",
          "plugins":[
            {
              "name": "write thumbnail",
              "plugin": "thumbnail"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "common_default_publisher_pre_finalizer",
              "visible": false
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "to ftrack server",
              "plugin": "result_houdini",
              "visible": false
            }
          ]
        },
        {
          "name": "post_finalizer",
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "common_default_publisher_post_finalizer",
              "visible": false
            }
          ]
        }
      ]
    }
  ]
}