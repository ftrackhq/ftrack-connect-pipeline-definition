{
  "type": "publisher",
  "name": "Geometry Publisher",
  "package": "geometry_houdini",
  "host": "houdini",
  "ui": "qt",
  "contexts": {
      "name": "context",
      "plugins":[
        {
          "name": "context selector",
          "plugin": "context.publish",
          "widget": "context.publish"
        }
      ]
  },
  "components": [
    {
      "name": "houdiniPublishNodes",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Geometry Collector",
              "plugin": "geometry_collector",
              "widget": "geometry_collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "is_geometry"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "houdini",
              "plugin": "houdini_nodes",
              "widget": "houdini_nodes_options"
            }
          ]
        }
      ]
    },{
      "name": "houdiniPublishScene",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Geometry Collector",
              "plugin": "geometry_collector",
              "widget": "geometry_collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "is_geometry"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "houdini",
              "plugin": "houdini_scene",
              "widget": "houdini_scene_options"
            }
          ]
        }
      ]
    },
     {
      "name": "alembic",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Geometry Collector",
              "plugin": "geometry_collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "is_geometry"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "alembic",
              "plugin": "alembic",
              "widget": "alembic_options",
              "options": {
                "alembicAnimation": true
              }
            }
          ]
        }
      ]
    },
    {
      "name": "fbx",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Geometry Collector",
              "plugin": "geometry_collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "is_geometry"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "fbx",
              "plugin": "fbx",
              "widget": "fbx_options"
            }
          ]
        }
      ]
    },
    {
      "name": "thumbnail",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "empty collector",
              "plugin": "publish_collector_test"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "publish_validator_test"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write thumbnail",
              "plugin": "thumbnail"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": {
      "name": "finalizer",
      "plugins":[
        {
          "name": "to ftrack server",
          "plugin": "result_houdini",
          "visible": false
        }
      ]
    }
}