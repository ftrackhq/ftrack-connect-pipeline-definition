{
  "type": "publisher",
  "name": "Scene Publisher",
  "package": "scene_maya",
  "host_type": "maya",
  "ui_type": "qt",
  "contexts": [
    {
    "name": "contextStep",
    "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "context.publish",
              "widget": "context.publish"
            }
          ]
        }
      ]
  }
  ],
  "components": [
    {
      "name": "mayaBinaryScene",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect_scene_selection",
              "plugin": "scene_or_selection",
              "options": {
                "export": ["scene", "export_selected"]
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "maya",
              "plugin": "maya_binary",
              "widget": "maya_options"
            }
          ]
        }
      ]
    },
    {
      "name": "thumbnail",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "select camera to playblast",
              "plugin": "camera",
              "options": {
                "camera_name": "persp"
              },
              "widget": "camera"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write thumbnail",
              "plugin": "thumbnail"
            }
          ]
        }
      ]
    },
    {
      "name": "reviewable",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "select camera to playblast",
              "plugin": "camera",
              "options": {
                "camera_name": "persp"
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "nonempty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "write reviewable",
              "plugin": "reviewable"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "finalizerStep",
      "stages": [
        {
          "name": "preFinalizer",
          "plugins":[
            {
              "name": "to ftrack server",
              "plugin": "result_maya",
              "visible": false
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "to ftrack server",
              "plugin": "result_maya",
              "visible": false
            }
          ]
        },
        {
          "name": "postFinalizer",
          "plugins":[
            {
              "name": "to ftrack server",
              "plugin": "result_maya",
              "visible": false
            }
          ]
        }
      ]
    }
  ]
}