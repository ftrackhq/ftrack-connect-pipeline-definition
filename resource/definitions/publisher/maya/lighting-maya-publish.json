{
  "type": "publisher",
  "name": "Lighting Publisher",
  "package": "lightPackage",
  "host": "maya",
  "ui": "qt",
  "contexts": [
    {
      "type": "plugin",
      "name": "context selector",
      "plugin": "context.publish",
      "widget": "context.publish"
    }
  ],
  "components": [
    {
      "type": "component",
      "name": "main",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect from set",
              "plugin": "from_set",
              "options": {
                "set_name": "GEO"
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "non_empty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "maya ascii",
              "plugin": "geometry",
              "editable": false,
              "options": {
                "file_type": "ma",
                "animated": false
              }
            }
          ]
        }
      ]
    },
    {
      "name": "beauty",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "from prefix",
              "plugin": "from_prefix",
              "options": {
                "prefix": "beauty_"
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "non_empty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "render pass",
              "plugin": "image",
              "options": {
                "file_type": "exr",
                "color_depth": 16
              }
            }
          ]
        }
      ]
    },
    {
      "name": "diffuse",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "from prefix",
              "plugin": "from_prefix",
              "options": {
                "prefix": "diff_"
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "non_empty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "render pass",
              "plugin": "image",
              "options": {
                "file_type": "exr",
                "color_depth": 16
              }
            }
          ]
        }
      ]
    },
    {
      "name": "reflection",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "from prefix",
              "plugin": "from_prefix",
              "options": {
                "prefix": "refl_"
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "non_empty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "render pass",
              "plugin": "image",
              "options": {
                "file_type": "exr",
                "color_depth": 16
              }
            }
          ]
        }
      ]
    },
    {
      "name": "shadow",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "from prefix",
              "plugin": "from_prefix",
              "options": {
                "prefix": "shad_"
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "non_empty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "render pass",
              "plugin": "image",
              "options": {
                "file_type": "exr",
                "color_depth": 16
              }
            }
          ]
        }
      ]
    },
    {
      "name": "specular",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "from prefix",
              "plugin": "from_prefix",
              "options": {
                "prefix": "spec_"
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "non_empty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "render pass",
              "plugin": "image",
              "options": {
                "file_type": "exr",
                "color_depth": 16
              }
            }
          ]
        }
      ]
    },
    {
      "name": "reviewable",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "from scene",
              "plugin": "scene"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "type": "plugin",
              "name": "validate selection",
              "plugin": "non_empty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "playblast",
              "plugin": "playblast",
              "options": {
                "from_camera": "persp",
                "start_frame": 0,
                "end_frame": 100,
                "encoding": "h264",
                "file_type": "mov"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "thumbnail",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "from viewport",
              "plugin": "from_viewport"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "non_empty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "thumbnail",
              "plugin": "image",
              "options": {
                "file_type": "jpg"
              }
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "to ftrack server",
      "plugin": "to_ftrack",
      "visible": false
    }
  ]
}