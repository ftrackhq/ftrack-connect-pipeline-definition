{
  "type": "publisher",
  "name": "Geometry Publisher",
  "package": "geometry_maya",
  "host": "maya",
  "ui": "qt",
  "contexts": {
      "name": "context",
      "plugins":[
        {
          "name": "context selector",
          "plugin": "context.publish",
          "widget": "context.publish"
        }
      ]
    },
  "components": [
    {
      "name": "mayaBinary",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Geometry Collector",
              "plugin": "geometry_collector",
              "widget": "geometry_collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "is_geometry"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "maya",
              "plugin": "maya_binary",
              "widget": "maya_options"
            }
          ]
        }
      ]
    },
     {
      "name": "alembic",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Geometry Collector",
              "plugin": "geometry_collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "is_geometry"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "alembic",
              "plugin": "alembic",
              "widget": "alembic_options",
              "options": {
                "alembicAnimation": true
              }
            }
          ]
        }
      ]
    },
    {
      "name": "fbx",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Geometry Collector",
              "plugin": "geometry_collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "is_geometry"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "name": "fbx",
              "plugin": "fbx",
              "widget": "fbx_options"
            }
          ]
        }
      ]
    },
    {
      "name": "thumbnail",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "select camera to playblast",
              "plugin": "camera",
              "options": {
                "camera_name": "persp"
              },
              "widget": "camera"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "type": "plugin",
              "name": "validate selection",
              "plugin": "nonempty"
            }
          ]
        },
        {
          "name": "output",
          "plugins":[
            {
              "type": "plugin",
              "name": "write thumbnail",
              "plugin": "thumbnail"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": {
      "name": "finalizer",
      "plugins":[
        {
          "name": "to ftrack server",
          "plugin": "result_maya",
          "visible": false
        }
      ]
    }
}