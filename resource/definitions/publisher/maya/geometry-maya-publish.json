{
  "type": "publisher",
  "name": "Geometry Publisher",
  "asset_type": "geo",
  "host_type": "maya",
  "ui_type": "qt",
  "task_type": "modeling",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "common_default_publisher_context",
              "widget": "common_default_publisher_context"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "snapshot",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect_scene_selection",
              "plugin": "maya_scene_publisher_collector",
              "options": {
                "export": ["scene"]
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate scene",
              "plugin": "common_non_empty_publisher_validator"
            }
          ]
        },
        {
          "name": "exporter",
          "plugins":[
            {
              "name": "maya",
              "plugin": "maya_default_publisher_exporter",
              "widget": "maya_default_publisher_exporter"
            }
          ]
        }
      ]
    },
    {
      "name": "model",
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Geometry Collector",
              "plugin": "maya_geometry_publisher_collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "common_non_empty_publisher_validator"
            }
          ]
        },
        {
          "name": "exporter",
          "plugins":[
            {
              "name": "maya",
              "plugin": "maya_default_publisher_exporter",
              "widget": "maya_default_publisher_exporter"
            }
          ]
        }
      ]
    },
    {
      "name": "cache",
      "optional": true,
      "selected": false,
