{
  "type": "opener",
  "name": "Reference Opener",
  "asset_type": "upload",
  "host_type": "nuke",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "context.open",
              "widget": "context.open"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "snapshot",
      "file_formats": [".nk"],
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Open Nuke Script",
              "plugin": "open_nuke"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "nuke",
              "plugin": "post_import_test"
            }
          ]
        }
      ]
    },
    {
      "name": "sequence",
      "file_formats": [".exr", ".dpx", ".cin", ".dng", ".tga", ".yuv", ".tif", ".tiff", ".jpg", ".jpeg", ".png", ".dtex", ".gif", ".iff", ".psd", ".sgi"],
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import image sequence",
              "plugin": "import_image_sequence"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "nuke",
              "plugin": "post_import_test"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "pre_finalizer_test"
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "Save script to working directory",
              "plugin": "nuke_finalize"
            }
          ]
        },
        {
          "name": "post_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "post_finalizer_test"
            }
          ]
        }
      ]
    }
  ]
}