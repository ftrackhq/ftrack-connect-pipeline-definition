{
  "type": "opener",
  "name": "Geometry Opener",
  "asset_type": "geo",
  "host_type": "nuke",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "context.open",
              "widget": "context.open"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "snapshot",
      "file_formats": [".nk"],
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Open Nuke Script",
              "plugin": "open_nuke"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "nuke",
              "plugin": "post_import_test"
            }
          ]
        }
      ]
     },
     {
      "name": "cache",
      "file_formats": [".abc"],
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import paths to Nuke",
              "plugin": "geometry"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "nuke",
              "plugin": "post_import_test"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "pre_finalizer_test",
              "visible": false
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "Save script to working directory",
              "plugin": "nuke_finalize"
            }
          ]
        },
        {
          "name": "post_finalizer",
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "post_finalizer_test",
              "visible": false
            }
          ]
        }
      ]
    }
  ]
}