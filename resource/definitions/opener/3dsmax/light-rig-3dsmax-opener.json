{
  "type": "opener",
  "name": "Light Rig opener",
  "package": "light_rig_3dsmax",
  "host_type": "3dsmax",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "mode": "import",
              "name": "context selector",
              "plugin": "common_default_opener_context",
              "widget": "common_default_opener_context"
            },
            {
              "mode": "open",
              "name": "context selector",
              "plugin": "common_default_opener_context",
              "widget": "common_default_opener_context"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "3dsmax",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "common_context_opener_collector",
              "options": {
                "accepted_formats": [".max"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "load paths to Max",
              "plugin": "load_max"
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "max",
              "plugin": "common_default_opener_post_import"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "common_default_opener_pre_finalizer",
              "visible": false
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "Do nothing",
              "plugin": "common_default_opener_finalizer",
              "visible": false
            }
          ]
        },
        {
          "name": "post_finalizer",
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "common_default_opener_post_finalizer",
              "visible": false
            }
          ]
        }
      ]
    }
  ]
}