{
  "type": "opener",
  "name": "Asset Opener",
  "asset_type": "script",
  "host_type": "unreal",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "common_passthrough_opener_context",
              "widget": "common_default_opener_context"
            },
            {
              "name": "root context selector",
              "plugin": "common_passthrough_opener_context",
              "widget": "unreal_root_opener_context"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "snapshot",
      "file_formats": [".uasset"],
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "common_context_opener_collector"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Open Unreal Asset",
              "plugin": "unreal_native_opener_importer",
              "options": {
              }
            }
          ]
        },
        {
          "name": "post_importer",
          "plugins":[
            {
              "name": "unreal",
              "plugin": "common_passthrough_opener_post_importer"
            }
          ]
        }
      ]
    }
  ],
"finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "visible": true,
          "plugins":[
            {
              "name": "Import asset dependencies from ftrack server",
              "description": "Search ftrack for asset dependencies, and their sub dependencies, and import them to Unreal",
              "plugin": "unreal_dependencies_opener_pre_finalizer",
              "optional": true
            }
          ]
        },
        {
          "name": "finalizer",
          "visible": true,
          "plugins":[
            {
              "name": "Finalize asset",
              "description" : "Restore pipeline asset info, restore modification time and load asset in Unreal",
              "plugin": "unreal_asset_opener_finalizer"
            }
          ]
        },
        {
          "name": "post_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "Post finalizer",
              "plugin": "common_passthrough_opener_post_finalizer"
            }
          ]
        }
      ]
    }
  ]
}