{
  "type": "opener",
  "name": "Geometry Opener",
  "asset_type": "geo",
  "host_type": "maya",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "context.open",
              "widget": "context.open"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "snapshot",
      "file_formats": [".mb", ".ma"],
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Open Maya Scene",
              "plugin": "open_maya",
              "options": {
              }
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "maya",
              "plugin": "post_import_test"
            }
          ]
        }
      ]
    },
    {
      "name": "model",
      "file_formats": [".mb", ".ma"],
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "collect_from_context"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Open Maya Scene",
              "plugin": "open_maya",
              "options": {
              }
            }
          ]
        },
        {
          "name": "post_import",
          "plugins":[
            {
              "name": "maya",
              "plugin": "post_import_test"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "pre_finalizer_test"
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "Save Scene",
              "description" : "Upon open, save Maya scene to local snapshot directory",
              "plugin": "maya_finalize"
            }
          ]
        },
        {
          "name": "post_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "post_finalizer_test"
            }
          ]
        }
      ]
    }
  ]
}