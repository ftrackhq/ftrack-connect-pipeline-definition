{
  "type": "opener",
  "name": "Scene opener",
  "package": "scene_houdini",
  "host_type": "houdini",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "mode": "import",
              "name": "context selector",
              "plugin": "common_default_opener_context",
              "widget": "common_default_opener_context"
            },
            {
              "mode": "open",
              "name": "context selector",
              "plugin": "common_default_opener_context",
              "widget": "common_default_opener_context"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "houdiniScene",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "common_context_opener_collector",
              "options": {
                "accepted_formats": [".hip"]
              }
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Import paths to Houdini",
              "plugin": "load_houdini_scene",
              "widget": "load_houdini",
              "options": {
                "load_mode": "import",
                "load_options": {
                  "MergeOverwriteOnConflict": true
                }
              }
            }
          ]
        },
        {
          "name": "post_importer",
          "plugins":[
            {
              "name": "houdini",
              "plugin": "common_default_opener_post_importer"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "common_default_opener_pre_finalizer",
              "visible": false
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "Do nothing",
              "plugin": "common_default_opener_finalizer",
              "visible": false
            }
          ]
        },
        {
          "name": "post_finalizer",
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "common_default_opener_post_finalizer",
              "visible": false
            }
          ]
        }
      ]
    }
  ]
}