{
  "title": "Publisher",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "Config": {
      "title": "Config",
      "type": "object",
      "required": [
        "engine_type",
        "type"
      ],
      "order":["type", "engine_type"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^config$",
          "default": "config"
        },
        "engine_type": {
          "type": "string",
          "default": "publisher"
        }
      }
    },
    "Stage": {
      "title": "Stage",
      "type": "object",
      "required": [
        "name",
        "plugins",
        "type"
      ],
      "order":["type", "name", "plugins"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^stage$",
          "default": "stage"
        },
        "name": {
          "type": "string",
          "enum": [
            "collector",
            "validator",
            "output",
            "context",
            "finalizer",
            "pre_finalizer",
            "post_finalizer"
          ]
        },
        "plugins": {
          "type": "array",
          "items": {"$ref": "#/definitions/Plugin"},
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "Step": {
      "title": "Step",
      "type": "object",
      "required": [
        "name",
        "stages",
        "type",
        "stage_order"
      ],
      "order":["type", "name", "stages", "stage_order" ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^step$",
          "default": "step"
        },
        "name": {
          "type": "string"
        },
        "optional": {
          "type": "boolean",
          "default": false
        },
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "stages": {
          "type": "array",
          "maxItems": 3,
          "uniqueItems": true,
          "items": {}
        },
        "stage_order": {
          "type": "array",
          "items": {"type": "string"},
          "default": []
        }
      }
    },
    "CollectorStage": {
      "allOf": [
        {
          "$ref": "#/definitions/Stage"
        }
      ],
      "properties": {
        "name": {
          "pattern": "^collector$",
          "default": "collector"
        },
        "plugins": {
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/Plugin"
              }
            ],
            "properties": {
              "plugin_type": {
                "pattern": "^collector$",
                "default": "collector"
              }
            }
          },
          "type": "array",
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "ValidatorStage": {
      "allOf": [
        {
          "$ref": "#/definitions/Stage"
        }
      ],
      "properties": {
        "name": {
          "pattern": "^validator$",
          "default": "validator"
        },
        "plugins": {
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/Plugin"
              }
            ],
            "properties": {
              "plugin_type": {
                "pattern": "^validator$",
                "default": "validator"
              }
            }
          },
          "type": "array",
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "OutputStage": {
      "allOf": [
        {
          "$ref": "#/definitions/Stage"
        }
      ],
      "properties": {
        "name": {
          "pattern": "^output$",
          "default": "output"
        },
        "plugins": {
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/Plugin"
              }
            ],
            "properties": {
              "plugin_type": {
                "pattern": "^output$",
                "default": "output"
              }
            }
          },
          "type": "array",
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "ContextStage": {
      "allOf": [
        {
          "$ref": "#/definitions/Stage"
        }],
      "properties": {
          "name": {
            "pattern": "^context$",
            "default": "context"
          },
          "plugins": {
            "type": "array",
            "items": {
            "allOf": [
              {
                "$ref": "#/definitions/Plugin"
              }
            ],
            "properties": {
              "plugin_type": {
                "pattern": "^context$",
                "default": "context"
              }
            }
          },
            "default": [],
            "minItems": 1,
            "uniqueItems": true
        }
        }
    },
    "FinalizerStage": {
      "allOf": [
        {
          "$ref": "#/definitions/Stage"
        }
      ],
      "properties": {
        "name": {
          "pattern": "^finalizer$",
          "default": "finalizer"
        },
        "plugins": {
          "type": "array",
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/Plugin"
              }
            ],
            "properties": {
              "plugin_type": {
                "pattern": "^finalizer$",
                "default": "finalizer"
              }
            }
          },
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "Plugin": {
      "title": "Plugin",
      "type": "object",
      "required": [
        "name",
        "plugin",
        "type",
        "plugin_type"
      ],
      "order":["type", "plugin_type", "name", "description", "plugin", "widget", "options"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^plugin$",
          "default": "plugin"
        },
        "plugin_type": {
              "type": "string",
              "enum": [
                "collector",
                "validator",
                "output",
                "context",
                "finalizer",
                "pre_finalizer",
                "post_finalizer"
              ]
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "plugin": {
          "type": "string"
        },
        "widget": {
          "type": "string"
        },
        "widget_ref": {
          "type": "string"
        },
        "visible": {
          "type": "boolean",
          "default": true
        },
        "editable": {
          "type": "boolean",
          "default": true
        },
        "options": {
          "type": "object",
          "default": {}
        }
      }
    },
    "ComponentStep": {
      "allOf": [
        {
          "$ref": "#/definitions/Step"
        }
      ],
      "properties": {
        "stages": {
          "type": "array",
          "maxItems": 3,
          "uniqueItems": true,
          "items": {
            "oneOf":[
                      {"$ref": "#/definitions/CollectorStage"},
                      {"$ref": "#/definitions/ValidatorStage"},
                    {"$ref": "#/definitions/OutputStage"}
                  ]
          }
        },
        "stage_order": {
          "type": "array",
          "items": {"type": "string"},
          "default": [
            "collector",
            "validator",
            "output"
          ]
        }
      }
    },
    "FinalizerStep": {
      "allOf": [
        {
          "$ref": "#/definitions/Step"
        }
      ],
      "properties": {
        "stages": {
          "type": "array",
          "maxItems": 3,
          "uniqueItems": true,
          "items": {
            "oneOf":[
                      {"$ref": "#/definitions/PreFinalizerStage"},
                      {"$ref": "#/definitions/FinalizerStage"},
                    {"$ref": "#/definitions/PostFinalizerStage"}
                  ]
          }
        },
        "stage_order": {
          "type": "array",
          "items": {"type": "string"},
          "default": [
            "pre_finalizer",
            "finalizer",
            "post_finalizer"
          ]
        }
      }
    },
    "ContextStep": {
      "allOf": [
        {
          "$ref": "#/definitions/Step"
        }
      ],
      "properties": {
        "stages": {
          "type": "array",
          "maxItems": 1,
          "uniqueItems": true,
          "items": {
            "oneOf":[
                      {"$ref": "#/definitions/ContextStage"}
                  ]
          }
        },
        "stage_order": {
          "type": "array",
          "items": {"type": "string"},
          "default": [
            "context"
          ]
        }
      }
    },
    "PreFinalizerStage": {
      "allOf": [
        {
          "$ref": "#/definitions/Stage"
        }
      ],
      "properties": {
        "name": {
          "pattern": "^pre_finalizer$",
          "default": "pre_finalizer"
        },
        "plugins": {
          "type": "array",
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/Plugin"
              }
            ],
            "properties": {
              "plugin_type": {
                "pattern": "^pre_finalizer$",
                "default": "pre_finalizer"
              }
            }
          },
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "PostFinalizerStage": {
      "allOf": [
        {
          "$ref": "#/definitions/Stage"
        }
      ],
      "properties": {
        "name": {
          "pattern": "^post_finalizer$",
          "default": "post_finalizer"
        },
        "plugins": {
          "type": "array",
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/Plugin"
              }
            ],
            "properties": {
              "plugin_type": {
                "pattern": "^post_finalizer$",
                "default": "post_finalizer"
              }
            }
          },
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        }
      }
    }
  },
  "required": [
    "name",
    "package",
    "host_type",
    "contexts",
    "components",
    "finalizers",
    "type",
    "_config"
  ],
  "order":[
    "type", "name", "package", "host_type", "contexts", "components", "finalizers"
  ],
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^publisher$",
      "default": "publisher"
    },
    "name": {
      "type": "string",
      "default": null
    },
    "package": {
      "type": "string",
      "default": null
    },
    "host_type": {
      "type": "string",
      "default": null
    },
    "ui_type": {
      "type": "string",
      "default": ""
    },
    "contexts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ContextStep"
      },
      "default": [],
      "minItems": 1,
      "manItems": 1,
      "uniqueItems": true
    },
    "components": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ComponentStep"
      },
      "default": [],
      "minItems": 1,
      "uniqueItems": true
    },
    "finalizers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/FinalizerStep"
      },
      "default": [],
      "minItems": 1,
      "manItems": 1,
      "uniqueItems": true
    },
    "_config": {
      "$ref": "#/definitions/Config",
      "default": {}
    }
  }
}

