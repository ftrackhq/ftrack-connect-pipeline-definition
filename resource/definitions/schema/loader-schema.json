{
  "title": "Loader",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "Config": {
      "title": "Config",
      "type": "object",
      "required": [
        "stage_order",
        "engine_type",
        "type"
      ],
      "order":["type", "stage_order", "engine_type"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^config$",
          "default": "config"
        },
        "stage_order": {
          "type": "array",
          "items": {"type": "string"},
          "default": [
            "collector",
            "importer",
            "post_import"
          ]
        },
        "engine_type": {
          "type": "string",
          "default": "loader"
        }
      }
    },
    "Stage": {
      "title": "Stage",
      "type": "object",
      "required": [
        "name",
        "plugins",
        "type"
      ],
      "order":["type", "name", "plugins"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^stage$",
          "default": "stage"
        },
        "name": {
          "type": "string",
          "enum": [
            "collector",
            "importer",
            "post_import",
            "finalizer",
            "context"
          ]
        },
        "plugins": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Plugin"
          },
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "CollectorStage": {
      "allOf": [
        {
          "$ref": "#/definitions/Stage"
        }
      ],
      "properties": {
        "name": {
          "pattern": "^collector$",
          "default": "collector"
        },
        "plugins": {
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/Plugin"
              }
            ],
            "properties": {
              "plugin_type": {
                "pattern": "^collector$",
                "default": "collector"
              }
            }
          },
          "type": "array",
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "ImporterStage": {
      "allOf": [
        {
          "$ref": "#/definitions/Stage"
        }
      ],
      "properties": {
        "name": {
          "pattern": "^importer$",
          "default": "importer"
        },
        "plugins": {
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/Plugin"
              }
            ],
            "properties": {
              "plugin_type": {
                "pattern": "^importer$",
                "default": "importer"
              }
            }
          },
          "type": "array",
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "PostImportStage": {
      "allOf": [
        {
          "$ref": "#/definitions/Stage"
        }
      ],
      "properties": {
        "name": {
          "pattern": "^post_import$",
          "default": "post_import"
        },
        "plugins": {
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/Plugin"
              }
            ],
            "properties": {
              "plugin_type": {
                "pattern": "^post_import$",
                "default": "post_import"
              }
            }
          },
          "type": "array",
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "ContextStage": {
      "allOf": [
        {
          "$ref": "#/definitions/Stage"
        }],
      "properties": {
          "name": {
            "pattern": "^context$",
            "default": "context"
          },
          "plugins": {
            "type": "array",
            "items": {
            "allOf": [
              {
                "$ref": "#/definitions/Plugin"
              }
            ],
            "properties": {
              "plugin_type": {
                "pattern": "^context$",
                "default": "context"
              }
            }
          },
            "default": [],
            "minItems": 1,
            "uniqueItems": true
        }
        }
    },
    "FinalizerStage": {
      "allOf": [
        {
          "$ref": "#/definitions/Stage"
        }
      ],
      "properties": {
        "name": {
          "pattern": "^finalizer$",
          "default": "finalizer"
        },
        "plugins": {
          "type": "array",
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/Plugin"
              }
            ],
            "properties": {
              "plugin_type": {
                "pattern": "^finalizer$",
                "default": "finalizer"
              }
            }
          },
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "Plugin": {
      "title": "Plugin",
      "type": "object",
      "required": [
        "name",
        "plugin",
        "type",
        "plugin_type"
      ],
      "order":["type", "plugin_type", "name", "description", "plugin", "widget", "options"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^plugin$",
          "default": "plugin"
        },
        "plugin_type": {
              "type": "string",
              "enum": [
                "collector",
                "importer",
                "post_import",
                "finalizer",
                "context"
              ]
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "plugin": {
          "type": "string"
        },
        "widget": {
          "type": "string"
        },
        "widget_ref": {
          "type": "string"
        },
        "visible": {
          "type": "boolean",
          "default": true
        },
        "editable": {
          "type": "boolean",
          "default": true
        },
        "options": {
          "type": "object",
          "default": {}
        }
      }
    },
    "Component": {
      "title": "Component",
      "type": "object",
      "required": [
        "name",
        "stages",
        "type"
      ],
      "order":["type", "name", "stages"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "^component$",
          "default": "component"
        },
        "optional": {
          "type": "boolean",
          "default": false
        },
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "stages": {
          "type": "array",
          "maxItems": 3,
          "uniqueItems": true,
          "items": {
            "oneOf":[
                      {"$ref": "#/definitions/CollectorStage"},
                      {"$ref": "#/definitions/ImporterStage"},
                    {"$ref": "#/definitions/PostImportStage"}
                  ]
          }
          }
        }
      }
  },
  "required": [
    "name",
    "host_type",
    "package",
    "contexts",
    "components",
    "finalizers",
    "type",
    "_config"
  ],
  "order":[
    "type", "name", "package", "host_type", "contexts", "components", "finalizers"
  ],
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^loader$",
      "default": "loader"
    },
    "name": {
      "type": "string",
      "default": null
    },
    "package": {
      "type": "string",
      "default": null
    },
    "host_type": {
      "type": "string",
      "default": null
    },
    "ui_type": {
      "type": "string",
      "default": null
    },
    "contexts": {
      "$ref": "#/definitions/ContextStage"
    },
    "components": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Component"
      },
      "default": [],
      "minItems": 1,
      "uniqueItems": true
    },
    "finalizers": {
      "$ref": "#/definitions/FinalizerStage"
    },
    "_config": {
      "$ref": "#/definitions/Config",
      "default": {}
    }
  }
}

